FROM node:18

# Set working directory
WORKDIR /app

# Install Cypress dependencies
RUN apt-get update && apt-get install -y \
    libgtk2.0-0 \
    libgtk-3-0 \
    libgbm-dev \
    libnotify-dev \
    libgconf-2-4 \
    libnss3 \
    libxss1 \
    libasound2 \
    libxtst6 \
    xauth \
    xvfb \
    && rm -rf /var/lib/apt/lists/*

# Copy package.json and package-lock.json
COPY package*.json ./

# Install dependencies
RUN npm install

# Install Cypress
RUN npx cypress install

# Copy project files
COPY . .

# Set display for Cypress
ENV DISPLAY=:99

# Expose the port the app runs on
EXPOSE 3000

# Command to run tests
CMD ["bash", "-c", "Xvfb :99 -screen 0 1280x720x24 & node server.js & sleep 5 && cypress run"]
