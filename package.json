{
  "name": "j_kube",
  "version": "1.0.0",
  "description": "A multiplayer online Rummikub game with real-time chat for playing with friends across the globe - Now with Socket.IO support",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "start:auth": "node server-with-auth.js",
    "dev:auth": "nodemon server-with-auth.js",
    "debug": "node debug-server.js",
    "build": "./build-frontend.sh",
    "test": "npx cypress run",
    "test:open": "npx cypress open",
    "test:reconnection": "npx cypress run --spec 'cypress/e2e/reconnection.cy.js'",
    "test:multiplayer": "npx cypress run --spec 'cypress/e2e/multiplayer-reconnection.cy.js'",
    "test:edge": "npx cypress run --spec 'cypress/e2e/reconnection-edge-cases.cy.js'",
    "test:draw-button": "npx cypress run --spec 'cypress/e2e/draw-button-behavior.cy.js'",
    "test:player-layout": "npx cypress run --spec 'cypress/e2e/player-hand-layout.cy.js'",
    "test:game-logic": "npx cypress run --spec 'cypress/e2e/game-logic-integration.cy.js'",
    "test:ui": "npx cypress run --spec 'cypress/e2e/player-hand-layout.cy.js,cypress/e2e/draw-button-behavior.cy.js'",
    "test:prod": "cross-env CYPRESS_ENVIRONMENT=production npx cypress run",
    "test:local": "cross-env CYPRESS_ENVIRONMENT=local npx cypress run",
    "test:reconnection:prod": "cross-env CYPRESS_ENVIRONMENT=production npx cypress run --spec 'cypress/e2e/reconnection.cy.js'",
    "test:with-server": "npm-run-all --parallel start --race cypress:run",
    "cypress:run": "wait-on http://localhost:3000 && cypress run",
    "cypress:open": "wait-on http://localhost:3000 && cypress open"
  },
  "keywords": [
    "rummikub",
    "multiplayer",
    "game",
    "tiles",
    "socket.io",
    "chat"
  ],
  "author": "Fates",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.19.2",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.6.3",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@types/cypress": "^0.1.6",
    "cross-env": "^10.0.0",
    "cypress": "^13.17.0",
    "npm-run-all": "^4.1.5",
    "wait-on": "^8.0.4"
  }
}
